<section id="highlighted_initiatives">
  <div id="highlighted-initiatives">
    <div class="mb-12 flex gap-x-1 items-center">
      <h2 class="h2 decorator"><%= t("active_initiatives", scope: i18n_scope) %></h2>
      <div class="ml-auto" id="see-all-initiatives">
        <%= link_to decidim_initiatives.initiatives_path, class: "button button__sm button__text-secondary home-section__cta" do %>
          <%= t("see_all_initiatives", scope: "decidim.initiatives.pages.home.highlighted_initiatives") %>
          <%= icon "arrow-right-line", class: "fill-current" %>
        <% end %>
      </div>
    </div>
    <div class="card__grid-container">
      <div class="card__grid-grid">
        <% highlighted_initiatives.each do |initiative| %>
          <%= link_to decidim_initiatives.initiative_path(initiative), class: "card__highlight" do %>
            <div aria-hidden="true" class="card__highlight-img"
              style="background-image:url('<%= initiative.banner_image.path %>')"></div>
            <span class="show-for-sr"><%= translated_attribute initiative.title %></span>
            <div class="card__highlight_container">
              <span class="card__highlight_text"><%= decidim_html_escape(translated_attribute(initiative.title)) %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
